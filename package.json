{
  "name": "react-electron-demo",
  "version": "0.1.1",
  "author": "Demo",
  "description": "React Electron Desktop Application",
  "main": "build/electron.js",
  "homepage": "./",
  "productName": "React Electron",
  "license": "UNLICENSED",
  "scripts": {
    "start": "cross-env BROWSER=none PORT=4321 craco start",
    "postinstall": "electron-builder install-app-deps",
    "build": "rimraf dist && rimraf build && craco build",
    "electron:start": "electron .",
    "buildwin": "npm run build && electron-builder build --win --x64",
    "buildmac": "npm run build && electron-builder -m",
    "test": "craco test",
    "eject": "craco eject",
    "createfolder" : "rimraf dist/.icon-ico dist/builder-debug.yml dist/win-unpacked"
  },
  "build": {
    "asar": true,
    "extends": null,
    "productName": "React Electron",
    "appId": "com.demo.us",
    "copyright": "Â© 2022 React Electron",
    "files": [
      "./build/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 200,
          "type": "file"
        }
      ]
    },
    "mac": {
      "extendInfo": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      },
      "icon": "public/logo512.png",
      "hardenedRuntime": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/logo512.png",
      "verifyUpdateCodeSignature": false,
      "publisherName": "Clouwood"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "icon": "public"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "electron-is-dev": "2.0.0",
    "express": "^4.17.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.3.0",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@craco/craco": "^6.1.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.5",
    "electron-builder": "^22.10.5",
    "electron-rebuild": "^2.3.5",
    "typescript": "^4.1.2"
  }
}
